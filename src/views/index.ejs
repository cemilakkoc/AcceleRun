<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- process.env.PAGE_TITLE %></title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"
    >
    </script>
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <script src="js/bootstrap.min.js" ></script>

</head>
<body>
    <div class="container">
        <div class="row p-5">
            <div class="col-12 mb-4">
                <h5 class="text-center">Love parties? So do we!</h5>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <div class="form-input">
                        <input id="website" type="text" class="form-control" placeholder="https://example.com" />
                        <small class="text-muted">Enter your website here to rock'n roll!</small>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-input">
                        <button onclick="initIframe()" class="btn btn-md btn-info">Let the party begin ðŸ¤˜</button>
                    </div>
                </div>
            </div>
            <div class="col-12" style="display: block;">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe name="websiteiframe" id="websiteiframe" class="embed-responsive-item" src="https://via.placeholder.com/1000" width="100%"></iframe>
                </div>
            </div>
        </div>
    </div>
    <div id="infomodal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered d-flex justify-content-center" role="document">
                <div class="spinner-border" style="color: white;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $("#websiteiframe").on("load", function() {
            $("#infomodal").modal("hide");
        });
    
        function initIframe() {
            let that = this;
            let url = $("#website").val();
            let website = "/website/" + url;

            try {
                new URL(url);
                $("#infomodal").modal()
                $("#websiteiframe").attr("src", website);

            } catch (err) {
                return alert("Please enter a valid website.. (it hurts me)")
            }

        }
    </script>
</body>
</html>